<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:hint="Nama Lengkap"
        app:boxBackgroundColor="@android:color/transparent"
        app:errorEnabled="true"
        android:id="@+id/error_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/input_name"
            android:inputType="textPersonName"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/error_name"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:hint="Email"
        app:boxBackgroundColor="@android:color/transparent"
        app:errorEnabled="true"
        android:id="@+id/error_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/input_email"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginBottom="20dp"
        android:layout_below="@id/error_email"
        android:hint="Passowrd"
        app:boxBackgroundColor="@android:color/transparent"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        android:id="@+id/error_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/input_password"
            android:inputType="textPassword"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginBottom="15dp"
        android:shadowRadius="8dp"
        android:backgroundTint="@color/grey"
        android:layout_below="@id/error_password"
        android:id="@+id/btn_register"
        app:cornerRadius="6dp"
        android:text="daftar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_faq"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/btn_register"
        android:text="@string/text_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_divider"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/text_faq"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.6"
            android:background="@color/green" />

        <TextView
            android:textAlignment="center"
            android:layout_weight="0.8"
            android:text="atau Login dengan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="0.6"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/green"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/layout_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_login_facebook"
            android:background="@drawable/outline_shape"
            android:padding="7dp"
            android:layout_weight="0.95"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="10dp"
                android:src="@drawable/fb"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:text="Facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/btn_login_google"
            android:background="@drawable/outline_shape"
            android:padding="7dp"
            android:layout_weight="0.95"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="10dp"
                android:src="@drawable/google"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:text="Google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>