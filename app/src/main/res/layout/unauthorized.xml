<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/img_login"
        android:src="@drawable/ic_undraw_unauthorized"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/img_login"
        android:id="@+id/txt_accecc_denied"
        android:textColor="@color/donker"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Access Denied!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="11sp"
        android:gravity="center_horizontal"
        android:textColor="@color/donker"
        android:layout_below="@id/txt_accecc_denied"
        android:text="Silahkan Login Dahulu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        app:cornerRadius="56dp"
        android:backgroundTint="@color/donker"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Login"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>