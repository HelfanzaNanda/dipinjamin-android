<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Judul"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_title"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Penulis"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_writer"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Tahun"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_year"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="6dp"
                android:textSize="11sp"
                android:text="Genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/categories_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Penerbit"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_publisher"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Ketebalan / Halaman"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_number_of_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_number_of_page"
                android:inputType="number"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:hint="Deskripsi"
            app:boxBackgroundColor="@android:color/transparent"
            android:id="@+id/error_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/input_desc"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginBottom="6dp"
            android:textSize="11sp"
            android:text="Upload Foto Buku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_add_image"
            android:background="@drawable/border_grey"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:text="Buka Galeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@color/donker"
            android:text="Simpan"
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>